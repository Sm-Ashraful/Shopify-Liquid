<style>
  .my-header{
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: {{ section.settings.header_height }}px;
    align-items: center;
    text-align: center;
    background: {{ section.settings.bg_color }};
    color: black;
    border-radius: 5px;
  }
</style>

<div class="my-header">
  <div class="header-logo">This is logo</div>
  <div class="navbar">This is navbar</div>
  <div class="icon-list">
    <div class="search-bar">this is search bar</div>
    <div class="shopping-icon">this is shopping icon</div>
   </div>
</div>

{% schema %}
  {
    "name": "Custom Header",
    "settings": [
		{
             "type": "color",
             "id": "bg_color",
             "label": "Header Background Color",
             "default": "#8f94fb"
         },
		 {
              "type": "range",
              "id": "header_height",
              "min": 65,
              "max": 85,
              "step": 1,
              "unit": "px",
              "label": "Header Height",
              "default": 75
          }

	]
  }
{% endschema %}

